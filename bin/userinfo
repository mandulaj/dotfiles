#!/bin/bash

# Check if username is provided
if [ -z "$1" ]; then
    echo "Usage: ${0##*/} <username>"
    exit 1
fi

USER=$1

# Check if user exists
if ! id "$USER" &>/dev/null; then
    echo "Error: User '$USER' does not exist."
    exit 1
fi


# Get user details from /etc/passwd
USER_INFO=$(getent passwd "$USER")
IFS=':' read -r -a INFO <<< "$USER_INFO"

echo "ðŸ”¹ Username:           ${INFO[0]}"
echo "ðŸ”¹ UID:                ${INFO[2]}"
echo "ðŸ”¹ GID:                ${INFO[3]}"
echo "ðŸ”¹ Full Name:          ${INFO[4]:-N/A}"
echo "ðŸ”¹ Home Directory:     ${INFO[5]}"
echo "ðŸ”¹ Default Shell:      ${INFO[6]}"

# Get groups
USER_GROUPS=$(id "$USER" | sed 's/.*groups=//')
echo "ðŸ”¹ Groups:             $USER_GROUPS"

# Get account expiration info
if CHAGE_INFO=$(sudo chage -l "$USER" 2>/dev/null); then
    echo ""
    echo "ðŸ”¹ Account Expiration & Password Policy"
    echo "$CHAGE_INFO"
else
    echo "ðŸ”¹ Account Expiration Info: N/A (May not be a local user)"
fi

# Get shadow file info
SHADOW_INFO=$(sudo getent shadow "$USER" 2>/dev/null)
if [ -n "$SHADOW_INFO" ]; then
    EXPIRATION_DAYS=$(echo "$SHADOW_INFO" | cut -d: -f8)
    if [ -n "$EXPIRATION_DAYS" ] && [ "$EXPIRATION_DAYS" != "" ]; then
        EXPIRATION_DATE=$(date -d "1970-01-01 +$EXPIRATION_DAYS days" 2>/dev/null)
        echo "ðŸ”¹ Account Expires On: $EXPIRATION_DATE"
    fi
fi

# Get last login info
echo ""
echo "ðŸ”¹ Last Logins:"
lastlog -u "$USER"
